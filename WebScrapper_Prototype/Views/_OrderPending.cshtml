@model WazaWare.co.za.Models.ShopViewModel
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">       
        <title>Order Pending</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    </head>
    <body>
        <div class="container-fluid">
            <div class="card mb-3">
            <img src="https://wazaware.co.za/Media/Logo/LogoOfficialCropped.png" style="height:10rem" class="img-fluid card-img-top" alt="Logo">
                <div class="card-body">
                <h1 class="card-title">Hello @Model.UserView!.FirstName,</h1>
                <h2>We have received your order! (@Model.Summary!.OrderId)</h2>
                <p>
                    The next step is for you to make payment and send us proof of payment.<br>
                    Find your order and banking details below:
                </p>
                <h1>Order ID: @Model.Summary.OrderId</h1>
                <div class="table-responsive-sm">                    
                    <table class="table">                       
                        <thead>
                          <tr style="padding:10px">
                            <th scope="col">Order</th>
                            <th scope="col">Name</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach(var product in Model.Cart!)
                            {
                                <tr style="padding:10px">
                                    <th scope="row" style="padding:10px"><img src="https://wazaware.co.za/Backend/GetImage/@product.ProductId" width="100" height="100" title="product" /></th>
                                    <td style="padding:10px"><a href="https://wazaware.co.za/Shop/Product/@product.ProductId"><h5>@product.ProductName!.Substring(0,35) ...</h5></a></td>
                                    <td style="padding:10px">@product.ProductCount</td>
                                    <td style="padding:10px">
                                        <span style="text-decoration-line:line-through;color:red;">@product.ProductPriceBaseFormatted</span><br>
                                        <b>@product.ProductPriceSaleFormatted</b>
                                    </td>
                                </tr>
                            }

                        </tbody>
                      </table>
                </div>
                    <div class="row">
                      <div class="col-sm-3">
                        <h4>Banking Details:</h4>                                     
                      </div>
                      <div class="col-sm-9">
                        <div class="row">
                          <div class="col-8 col-sm-6">
                            Account Holder: B VAN STADEN<br>
                            <b>Account Number: 10132412342</b><br>
                            Branch Code: 151001
                          </div>
                          <div class="col-4 col-sm-6">
                            <b>Reference: ORDERID-@Model.Summary.OrderId<br>
                            Email Proof of Payment: <a href="">shop@wazaware.co.za</a></b>
                          </div>
                        </div>
                      </div>
                    </div>  
                  <p class="card-text"><small class="text-body-secondary">Kind Regards,<br><span style="color: rgb(179, 116, 0);">Wazaware Team</span></small></p>
                </div>
              </div>
          </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    </body>
</html>