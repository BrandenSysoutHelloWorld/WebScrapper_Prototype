		window.addEventListener('scroll', function () {
			const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
			const windowHeight = window.innerHeight;
			const documentHeight = document.documentElement.scrollHeight;
			const distanceFromBottom = documentHeight - (scrollTop + windowHeight);
			if (scrollTop > topOfProducts && scrollTop < topOfFooter) {
				sidebarDiv.classList.add('fixed');
				sidebarDiv1.classList.remove('contracting');			
				productsIntial.classList.remove('expanding');

				if (distanceFromBottom <= 0) {
					sidebarDiv.classList.remove('fixed');
				}

			} else {
				sidebarDiv.classList.remove('fixed');
				sidebarDiv1.classList.add('contracting');			
				productsIntial.classList.add('expanding');
			}
		});
	</script>
