	<link rel="stylesheet" href="~/css/responsive.css">
	<!-- Site CSS -->
	<link rel="stylesheet" href="~/css/site.css">
	<style type="text/css">
		/* hide mobile div by default */
		.mobile {
			display: none;
		}

		/* show desktop div on screens wider than 768px */
		@@media (min-width: 768px) {
			.desktop {
				display: block;
			}

			.mobile {
				display: none;
			}
		}

		/* show mobile div on screens narrower than 768px */
		@@media (max-width: 767px) {
			.desktop {
				display: none;
			}

			.mobile {
				display: block;
			}
		}

		.section-divider {
			border-top: 1px solid black;
			padding-top: 20px;
			margin-top: 20px;
		}

		.div-divider {
			border-right: 1px solid black;
			padding-right: 10px;
			margin-right: 10px;
		}
	</style>
</head>
<body class="js">
	<!-- Preloader -->
	<div class="preloader">
		<div class="preloader-inner">
			<div class="preloader-icon">
				<span></span>
				<span></span>
			</div>
		</div>
	</div>
	<!-- // -->
	<!-- Header Shop -->
	<div class="header shop" style="background-color:#FFF5E1;">
		<!-- Topbar // Desktop Only -->
		<div class="desktop">
			<partial name="_TopBar" />
			<!-- Middle Inner -->
			<partial name="_MiddleInner" />
			<!-- Header Inner Partial View-->
			<partial name="_HeaderInner" />
		</div>
		<!-- // -->
		<!-- Header Inner // Mobile Only -->
		<div class="mobile">
			<!-- Header Inner Partial View-->
			<partial name="_HeaderInnerMobile" />
			<!-- // -->
		</div>
		<!-- // -->
	</div>
	<!-- // -->
	<section id="UserInfoDisplay" class="shop checkout section">
		<div class="container">
			<div class="row">
				<div class="col-sm-6 col-md-4 col-12">
					<p class="fs-4 h4">Welcome back,</p>
					<p class="fs-2 h2">@Model.UserView!.FirstName @Model.UserView.LastName</p>
				</div>
				<div class="col-sm-6 col-md-4 col-12" style="display:flex; flex-direction:column;">
					<a href="@Url.Action("Logout","User", new { delete = 10 })" class="button btn-outline-danger" style="padding:10px;">Delete Account</a>
					<a href="@Url.Action("Logout","User")" class="button btn-outline-warning" style="padding:10px;">Logout</a>
				</div>
				<div class="col-sm-6 col-md-4 col-12" style="display:flex; flex-direction:column;">
					<a href="#0" onclick="inDevNotice()" class="button btn-outline-info" style="padding:10px;">My Orders</a>
					<a href="/Shop/Cart" class="button btn-outline-info" style="padding:10px;">My Shopping Cart</a>
				</div>
			</div>
			<div class="row section-divider">
				<div class="col-sm-6 col-md-6 col-12">
					<p class="fw-bolder h5"><br>Contact Details <a href="@Url.Action("UpdateUser", "UserAccount")"><i class="ti-pencil-alt" style="white-space: nowrap;" data-toggle="tooltip" data-placement="right" title="Change Contact Details"></i></a></p>
					<div style="top:15px" class="row">
						<div class="col">
							<p class="label-info fs-4 fw-bolder">First Name</p>
							<p class="fs-4 h6 fw-bolder" style="top:0;">@Model.UserView.FirstName</p>
						</div>
						<div class="col">
							<p class="label-info fs-4 fw-bolder">Last Name</p>
							<p class="fs-4 h6 fw-bolder" style="top:0;">@Model.UserView.LastName</p>
						</div>
					</div>
					<div style="top:15px" class="row">
						<div class="col">
							<p class="label-info fs-4 fw-bolder">Email Address</p>
							<p class="fs-4 h6 fw-bolder" style="top:0;">@Model.UserView.Email</p>
						</div>
					</div>
					<div style="top:15px" class="row">
						<div class="col">
							<p class="label-info fs-4 fw-bolder">Phone Number</p>
							<p class="fs-4 h6 fw-bolder" style="top:0;">@Model.UserView.Phone</p>
						</div>
						<div class="col">
							<p class="label-info fs-4 fw-bolder">Password <a href="#" onclick=""><i class="ti-pencil-alt" style="white-space: nowrap;" data-toggle="tooltip" data-placement="right" title="Change Password"></i></a></p>
							<p class="fs-4 h6 fw-bolder" style="top:0;">********</p>
						</div>
					</div>
				</div>
			</div>		
		</div>
	</section>	
	<!-- Footer Partial View-->
	<partial name="_Footer" />
	<!-- // -->
	<!-- Jquery -->
	<script src="~/js/jquery.min.js"></script>
	<script src="~/js/jquery-migrate-3.0.0.js"></script>
