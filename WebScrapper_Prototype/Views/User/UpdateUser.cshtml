<body class="js">
	<!-- Preloader -->
	<div class="preloader">
		<div class="preloader-inner">
			<div class="preloader-icon">
				<span></span>
				<span></span>
			</div>
		</div>
	</div>
	<!-- // -->
	<!-- Header Shop -->
	<div class="header shop" style="background-color:#FFF5E1;">
		<!-- Topbar // Desktop Only -->
		<div class="desktop">
			<partial name="_TopBar" />
			<!-- Middle Inner -->
			<partial name="_MiddleInner" model="@Model.PartialView" />
			<!-- Header Inner Partial View-->
			<partial name="_HeaderInner" />
		</div>
		<!-- // -->
		<!-- Header Inner // Mobile Only -->
		<div class="mobile">
			<!-- Header Inner Partial View-->
			<partial name="_HeaderInnerMobile" />
			<!-- // -->
		</div>
		<!-- // -->
	</div>
	<!-- // -->
	<section id="RegisterNewUser" class="shop checkout section">
		<div class="container">
			<div class="row section-divider">
				<div class="col-9">
					<br>
					<p class="fs-4 h4">Update Your Contact Details</p>
					<p class="fs-2 h2">Please Make Sure Your Details Are Correct!</p>
				</div>
				<div class="col-9" style="margin: 0 10px;">
					<p class="fw-bolder h5"><br>We don't share any of your information with anyone</p>
					<form id="userRegister" asp-action="UpdateUser" class="form" method="post">
						<div class="row">
							<div class="col">
								<div asp-validation-summary="All" class="text-danger"></div>
							</div>
						</div>
						<div class="row" style="top:15px">
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label asp-for="Register!.FirstName" class="form-label">First Name</label>
									<input asp-for="Register!.FirstName" type="text" name="firstName" value="@Model.User!.FirstName" autocomplete="on" placeholder="Bill" class="form-control" aria-label="FirstName">
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label asp-for="Register!.LastName" class="form-label">Last Name</label>
									<input asp-for="Register!.LastName" type="text" name="lastName" value="@Model.User!.LastName" autocomplete="on" placeholder="Gates" class="form-control" aria-label="LastName">
								</div>
							</div>
						</div>
						<div class="row" style="top:15px">
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									@if (ViewBag.Message != null)
									{
										<p class="fs-6 h6" style="color:red">@ViewBag.Message</p>
									}
									<label asp-for="Register!.Email" class="form-label">Email Address</label>
									<input asp-for="Register!.Email" type="email" name="email" value="@Model.User!.Email" autocomplete="on" placeholder="lowprices@wazaware.co.za" class="form-control" aria-label="Email">
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label asp-for="Register!.Phone" class="form-label">Phone Number</label>
									<input asp-for="Register!.Phone" type="tel" name="phone" value="@Model.User!.Phone" autocomplete="on" placeholder="0815650206" class="form-control" aria-label="PhoneNumber">
								</div>
							</div>
						</div>
						<div class="row" style="top:15px">
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label asp-for="Register!.Password" class="form-label">Password</label>
									<input asp-for="Register!.Password" type="Password" name="password" value="**********" autocomplete="off" placeholder="Password" class="form-control" aria-label="Password">
								</div>
							</div>
							<div class="col-lg-6 col-md-6 col-12">
								<div class="form-group">
									<label asp-for="Register!.ConfirmPassword" class="form-label">Password</label>
									<input asp-for="Register!.ConfirmPassword" type="Password" name="confirmpassword" autocomplete="off" placeholder="Password" class="form-control" aria-label="Password">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col">
								<input type="submit" value="Save Changes" class="btn btn-primary" />
							</div>
						</div>
					</form>
					<div class="row">
						<div class="col" style="top:10px;">
							<a href="@Url.Action("Login", "UserAccount")" type="button" class="btn-outline-info" style="padding:5px;">Already Registered?</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
